@model ECommerce.Modelo.DB.Model.Produto

@{
    ViewBag.Title = "EditarProduto";
}

<h2>Produto</h2>

@using (Html.BeginForm("GravarProduto", "Produto", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
