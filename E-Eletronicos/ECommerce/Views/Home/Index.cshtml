<div class="container corpo">
    <div class="row">
   @foreach (var item in Model)
   {
        <div class="col-sm-3">
            <div class="panel">
                <table width="100%">
                    <tr>
                        <td class="panel-body">
                            <img src="@Url.Content("~/Images/Produtos/" + item.Imagem)" height="200" width="200" />
                        </td>
                    </tr>
                    <tr>
                        <td class="panel-body">
                            <h5>  @Html.DisplayFor(modelItem => item.Nome)</h5>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <span class="descProd">@Html.DisplayFor(modelItem => item.Descricao)</span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <span class="preco"> R$: @Html.DisplayFor(modelItem => item.Valor)</span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @using (Html.BeginForm("DetalhesProdutoCliente", "Produto", new { id = item.Id }))
                            {
                                <button style="width:100%" class="botao btn btn-primary btn-md" type="submit">Detalhes</button>
                            }
                        </td>
                    </tr>
                </table>
            </div>
        </div>
       }
      
    </div>
</div>

